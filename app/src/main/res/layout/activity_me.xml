<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="222dp"
            android:scaleType="centerCrop"
            android:src="@drawable/car_owner" />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/profile" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/profilebackground"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="76dp"
                android:text="Pelumi Eniodunmo"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="UI/UX, Android developer, Software and AI Engineer"
                android:textColor="#fff"
                android:textSize="14sp" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:id="@+id/emailt"
                    android:textSize="13sp"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_model"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/emailt"
                    android:text="joey@sharenofood.com"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/changeemailbtn"
                    android:layout_below="@+id/emailt"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="-22dp"
                    android:layout_toRightOf="@+id/car_model"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone number"
                    android:id="@+id/phone1"
                    android:textSize="13sp"
                    android:textColor="@color/teal_700"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/car_yeartxt"
                    android:fontFamily="sans-serif-light"
                    android:layout_below="@+id/phone1"
                    android:text="0719322601"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/changephonebtn"
                    android:layout_below="@+id/phone1"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="149dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginRight="-12dp"
                    android:layout_toRightOf="@+id/car_yeartxt"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="true"
                android:id="@+id/changePass"
                android:elevation="4dp"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/passwrd"
                    android:textSize="18sp"
                    android:textColor="@color/teal_700"/>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>