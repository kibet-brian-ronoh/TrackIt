<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".MyCar"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/mycarToolbar"
        android:background="@color/teal_700"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:backgroundTint="@color/lightblue"
        android:layout_marginTop="5dp"
        android:textAlignment="textStart"
        android:id="@+id/my_car"
        android:clickable="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relative">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/subaru"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:id="@+id/car_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toRightOf="@id/car_image"
                android:layout_marginTop="8dp"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout2"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@id/plateno">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subaru"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/car_make" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Forester"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/car_model"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/car_make" />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KCP 581K"
                    android:textSize="20dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/plateno"
                    android:layout_marginTop="5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout1"
                    android:layout_below="@id/layout2"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color: "
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/car_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gray"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:id="@+id/car_colortxt"
                        android:layout_toRightOf="@id/car_color" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout3"
                    android:layout_below="@id/layout1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Year: "
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:id="@+id/car_year" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2017"
                        android:textSize="20dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:id="@+id/car_yeartxt"
                        android:layout_toRightOf="@id/car_year" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:drawableRight="@drawable/ic_baseline_edit"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"/>

</LinearLayout>