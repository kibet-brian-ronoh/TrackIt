<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/treasure"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    android:orientation="vertical"
    android:textAlignment="textEnd"
    tools:context=".SplashPage">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:src="@drawable/trackit_image"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-80dp"
        android:src="@drawable/trackitlogo" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="We protect what you treasure most"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get started with"
        android:layout_marginTop="160dp"
        android:id="@+id/getstarted"
        android:layout_gravity="center"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <Button
            android:id="@+id/signupbtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/buttoncolor"
            android:textColor="#FFFFFF"
            android:text="Sign Up" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/buttoncolor"
            android:textColor="#FFFFFF"
            android:text="LOGIN" />

    </LinearLayout>

    <Button
        android:id="@+id/fgtpassword"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/buttoncolor"
        android:text="Forgot password?"
        android:textColor="#FFFFFF" />

</LinearLayout>